@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Dota2MMR" class="form-control" />
                <label asp-for="Input.Dota2MMR" class="form-label"></label>
                <span asp-validation-for="Input.Dota2MMR" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PUBGMMR" class="form-control" />
                <label asp-for="Input.PUBGMMR" class="form-label"></label>
                <span asp-validation-for="Input.PUBGMMR" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <input asp-for="Input.CSGOMMR" class="form-control" />
                <label asp-for="Input.CSGOMMR" class="form-label"></label>
                <span asp-validation-for="Input.CSGOMMR" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <input asp-for="Input.LeagueOfLegendsMMR" class="form-control" />
                <label asp-for="Input.LeagueOfLegendsMMR" class="form-label"></label>
                <span asp-validation-for="Input.LeagueOfLegendsMMR" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.VALORANTMMR" class="form-control" />
                <label asp-for="Input.VALORANTMMR" class="form-label"></label>
                <span asp-validation-for="Input.VALORANTMMR" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
