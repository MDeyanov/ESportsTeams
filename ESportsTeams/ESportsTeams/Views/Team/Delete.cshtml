@using ESportsTeams.Infrastructure.Data.Entity;
@using ESportsTeams.Infrastructure.Data.Enums;
@model Team



    <h1 class="text-center">Are you sure you want to delete this Team?</h1>
    <div class="form-group text-center">
        <form action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Confirm" class="btn btn-danger text-center mt-3" />
        </form>
    </div>
<div class="container">
    <form class="align-items-center justify-content-center" method="post" asp-action="Delete" enctype="multipart/form-data">
        <input type="hidden" value="AddressId" id="AddressId" />
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input disabled asp-for="Name" class="form-control"  placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input disabled asp-for="Description" class="form-control" placeholder="Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Category">Team Category</label>
            <select disabled asp-for="Category" asp-items="@Html.GetEnumSelectList<Category>()" class="form-control">
                <option selected="selected" value="">--Select--</option>
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address.Street">Street</label>
            <input disabled asp-for="Address.Street" class="form-control" placeholder="Street">
            <span asp-validation-for="Address.Street" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address.City">City</label>
            <input disabled asp-for="Address.City" class="form-control" placeholder="City">
            <span asp-validation-for="Address.Street" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address.Country">Country</label>
            <input disabled asp-for="Address.Country" class="form-control" placeholder="Country">
            <span asp-validation-for="Address.Country" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Image">Image</label>
            <input disabled asp-for="Image" type="file" class="form-control" placeholder="Image">
            <span asp-validation-for="Image" class="text-danger"></span>
    
        </div>
    </form>
</div>

